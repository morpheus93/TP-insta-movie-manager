      </div>
    </div>

    <div class="form-group">
      <%= f.label :picture_url, class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :picture_url, class: 'form-control' %>
      </div>
    </div>

